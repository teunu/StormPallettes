<Window x:Class="Stormworks_Pallettes_Manager.PopupDefaultPopulation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stormworks_Pallettes_Manager"
        mc:Ignorable="d"
        Title="Add default Palletes?" Height="160" Width="460" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True">
    <Grid>
        <TextBlock x:Name="display" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Margin="10,10,10,26"><Run Language="en-gb" Text="No Categories were found in your pallettes folder, do you want to automatically add the default pallettes?"/></TextBlock>
        <Button x:Name="decline" Content="No, I'll add them myself" HorizontalAlignment="Left" Height="30" Margin="44,80,0,0" VerticalAlignment="Top" Width="172" Click="decline_Click"/>
        <Button x:Name="accept" Content="Yes, please add" HorizontalAlignment="Left" Height="30" Margin="244,80,0,0" VerticalAlignment="Top" Width="172" Click="accept_Click"/>

    </Grid>
</Window>
