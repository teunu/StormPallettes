<Window x:Class="Stormworks_Pallettes_Manager.PopupSetPaths"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stormworks_Pallettes_Manager"
        mc:Ignorable="d"
        Title="Set Installation Path" Height="160" Width="460" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True">
    <Grid>
        <TextBlock Margin="0,10,0,10" TextWrapping="Wrap" TextAlignment="Center" FontSize="16"><Run Text="Please provide your StormWorks install folder:"/><LineBreak/><Run Language="en-gb" Text="(this is the folder with stormworks.exe)"/></TextBlock>
        <Button x:Name="Set_Path" Content="Set Path" HorizontalAlignment="Left" Height="26" Margin="325,92,0,0" VerticalAlignment="Top" Width="93" Click="Confirm_Click"/>
        <Button x:Name="Find_Path" Content=" C:/" HorizontalAlignment="Left" Height="26" Margin="39,92,0,0" VerticalAlignment="Top" Width="269" Click="Find_Click" HorizontalContentAlignment="Left">
            <Button.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuColorKey}}"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
