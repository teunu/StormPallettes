<Window x:Class="Stormworks_Pallettes_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stormworks_Pallettes_Manager"
        mc:Ignorable="d"
        Title="MainWindow" Height="460" Width="460" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Grid.Row="2" Content="Categories:"/>
        <Button x:Name="btn_Save" Margin="365,10,25,30" Content="Save"/>
        <Button x:Name="btn_Load" Margin="282,10,108,30" Content="Load"/>
        <Button x:Name="btn_Refresh" Margin="10,10,368,5" Content="Refresh" Click="btn_Refresh_Click"/>


        <ScrollViewer Name="Viewer" Grid.Row="1" HorizontalScrollBarVisibility="Auto" Margin="0,32,0,0">
            <StackPanel Name="ViewerContainer" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="-2,0,0,0">


            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
