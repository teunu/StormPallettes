<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <RootNamespace>Stormworks_Pallettes_Manager</RootNamespace>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>True</UseWindowsForms>
    <ApplicationIcon>resources\icons\swpallettes.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="resources\icons\eye-low-vision.png" />
    <None Remove="resources\icons\eye-slash.png" />
    <None Remove="resources\icons\eye-slash.svg" />
    <None Remove="resources\icons\eye.png" />
    <None Remove="resources\icons\pencil.png" />
    <None Remove="resources\icons\stormpalettes.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="resources\icons\swpallettes.ico" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="resources\icons\eye-low-vision.png" />
    <Resource Include="resources\icons\eye-slash.png" />
    <Resource Include="resources\icons\eye.png" />
    <Resource Include="resources\icons\pencil.png" />
    <Resource Include="resources\icons\stormpalettes.png" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Properties\Settings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>

</Project>
